rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // READ: Any authenticated user can read any user's profile.
      // This is often desired for features like user search or viewing profiles.
      // For stricter privacy, change to: `allow read: if isOwner(userId);`
      allow get: if isSignedIn();

      // LIST: Disabled for privacy. Prevents anyone from downloading a list of all users.
      allow list: if false;

      // CREATE: A user can only create their own user document.
      // The `id` field within the document must match their authentication UID.
      allow create: if isOwner(userId) && request.resource.data.id == userId;

      // UPDATE: A user can only update their own document.
      allow update: if isOwner(userId);
      
      // DELETE: A user can only delete their own document.
      allow delete: if isOwner(userId);
    }
  }
}
