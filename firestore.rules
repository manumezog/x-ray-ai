rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // READ: A user can only read their own profile.
      allow get: if isOwner(userId);

      // LIST: Disabled for privacy. Prevents anyone from downloading a list of all users.
      allow list: if false;

      // CREATE: A user can only create their own user document.
      // The `id` field within the document must match their authentication UID.
      allow create: if isOwner(userId) && request.resource.data.id == userId;

      // UPDATE: A user can only update their own document for specific fields.
      // The server-side logic handles the report count updates.
      allow update: if isOwner(userId);
      
      // DELETE: A user can only delete their own document.
      allow delete: if isOwner(userId);
    }
  }
}
